module leafref-validation {
    namespace "leafref.validation";
    prefix val;

    leaf l1 {
        type leafref {
            path "../l2";
        }
    }

    leaf l2 {
        type string;
    }

    container odl-contributor {
        list contributor {
            key "login";
            leaf login {
                type string;
            }
            leaf contributor-name {
                type string;
            }
            leaf odl-project-name {
                type leafref {
                    path "/odl-project/project/name";
                }
               // type string;
            }
        }
        list noleafref-contributor {
            leaf foo {
                type string;
            }
        }
    }

    container odl-project {
        list project {
            key "name";
            leaf name {
                type string;
            }
            leaf desc {
                type string;
            }
            leaf project-lead {
                type leafref {
                    path "../../../odl-contributor/contributor/login";
                }
            }
            leaf project-owner {
                type leafref {
                    path "/odl-contributor/contributor/login";
                }
            }

            choice ch1 {
                case c1 {
                    choice ch2 {
                        case c1 {
                            leaf l1 {
                                type leafref {
                                    path "../../con1/l1";
                                }
                            }
                        }
                        case c2 {
                        }
                    }
                }
                case c2 {
                }
            }
        }
        list noleafref-project {
            leaf foo {
                type string;
            }
        }
        container con1 {
            leaf l1 {
                type string;
            }
        }
    }

    container no-leafrefcontainer {
        list no-leafreflist {
            leaf bar {
                type string;
            }
        }
        container no-leafrefcontainer2 {
            leaf baz {
                type string;
            }
        }
    }

}
