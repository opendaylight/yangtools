module leafref-test {
    yang-version 1;
    namespace "urn:opendaylight:yangtools:leafref:test";
    prefix "lt";

    revision 2014-11-04 {
        description "Test deserialization value of leafref type.";
    }

    container interface {

        leaf testName {
            type string;
        }

        leaf simpleValue {
            type instance-identifier;
        }
    }

    container cont2 {
        leaf if-name {
            type leafref {
                path "../../lt:interface/lt:simpleValue";
            }
        }

    }



    leaf simpleValue2 {
        type identityref {
            base simpleIdentity;
        }
    }

    identity simpleIdentity {

    }
}