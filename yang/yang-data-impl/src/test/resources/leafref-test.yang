module controller-network {
    yang-version 1;
    namespace "urn:opendaylight:yangtools:leafref:test";
    prefix "topos";
    
    import ietf-inet-types { prefix "inet"; }
    
    revision 2014-11-04 {
       description "Test deserialization value of leafref type.";
    }
    
    container interface {
        leaf name {
            type enumeration {
                enum zero;
                enum one;
                enum two;
                enum seven {
                    value 7;
                }
            }
        }
    }
    
    leaf simpleValue {
        type leafref {
            path "../interface/name";
        }
    }
    
}